using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Drawing;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Windows.Forms;
using static System.Windows.Forms.VisualStyles.VisualStyleElement;
using static System.Windows.Forms.VisualStyles.VisualStyleElement.Button;

namespace WindowsFormsApp2
{
	public partial class Form1 : Form
	{
		public class Osoba
		{
			public string ime;
			public string prezime;
			public long OIB;
			protected internal static long brojac = 56522347010;
		}
		public class Nastavnik : Osoba
		{
			public string skola;
		}

		public class zaposleni : Osoba
		{
			public string servisira;
		}
		private void dodjelaNas(Nastavnik noviNastavnik)
		{
			noviNastavnik.OIB = Osoba.brojac;

			Osoba.brojac++;
		}
		private void dodjelaRad(zaposleni noviZaposleni)
		{
			noviZaposleni.OIB = Osoba.brojac;

			Osoba.brojac++;
		}

		private List<Nastavnik> listaNastavnika = new List<Nastavnik>();
		private List<zaposleni> listaZaposlenih = new List<zaposleni>();
		private int trenutniIndex = -1;

		public Form1()
		{
			InitializeComponent();
		}

		private void Form1_Load(object sender, EventArgs e)
		{

		}

		private void button1_Click(object sender, EventArgs e)
		{
			if (radioButton1.Checked == true)
			{
				label3.Text = "Servisira";

				string ime = textBox1.Text;
				string prezime = textBox2.Text;
				string servisira = textBox6.Text;


				zaposleni noviZaposleni = new zaposleni()
				{
					ime = ime,
					prezime = prezime,
					servisira = servisira
				};


				dodjelaRad(noviZaposleni);


				listaZaposlenih.Add(noviZaposleni);


				textBox1.Clear();
				textBox2.Clear();
				textBox6.Clear();

				MessageBox.Show("Osoba unesena");

			}
			if (radioButton2.Checked == true)
			{
				label3.Text = "Škola";

				string ime = textBox1.Text;
				string prezime = textBox2.Text;
				string skola = textBox6.Text;


				Nastavnik noviNastavnik = new Nastavnik()
				{
					ime = ime,
					prezime = prezime,
					skola = skola
				};


				dodjelaNas(noviNastavnik);


				listaNastavnika.Add(noviNastavnik);


				textBox1.Clear();
				textBox2.Clear();
				textBox6.Clear();

				MessageBox.Show("Osoba unesena");
			}
			
		}

		private void button2_Click(object sender, EventArgs e)
		{
			if (radioButton1.Checked == true)
			{
				if (listaZaposlenih.Count > 0)
				{
					trenutniIndex = 0;
					PrikaziZaposlene();
				}
			}
			if (radioButton2.Checked == true)
			{
				if (listaNastavnika.Count > 0)
				{
					trenutniIndex = 0;
					PrikaziNastavnika();
				}
			}
		}

		private void button3_Click(object sender, EventArgs e)
		{
			if (radioButton1.Checked == true)
			{
				if (listaZaposlenih.Count > 0 && trenutniIndex < listaZaposlenih.Count - 1)
				{
					trenutniIndex++;
					PrikaziZaposlene();
				}
				else
				{
					MessageBox.Show("Nema više zaposlenih.");
				}
			}

			if (radioButton2.Checked == true)
			{
				if (listaNastavnika.Count > 0 && trenutniIndex < listaNastavnika.Count - 1)
				{
					trenutniIndex++;
					PrikaziNastavnika();
				}
				else
				{
					MessageBox.Show("Nema više nastavnika.");
				}
			}
		}
		private void PrikaziNastavnika()
		{
			if (trenutniIndex >= 0 && trenutniIndex < listaNastavnika.Count)
			{
				Nastavnik trenutniNastavnik = listaNastavnika[trenutniIndex];


				textBox3.Text = trenutniNastavnik.ime;
				textBox4.Text = trenutniNastavnik.prezime;
				textBox5.Text = trenutniNastavnik.OIB.ToString();
				textBox7.Text = trenutniNastavnik.skola;
				
			}
		}
		private void PrikaziZaposlene()
		{
			if (trenutniIndex >= 0 && trenutniIndex < listaZaposlenih.Count)
			{
				zaposleni trenutniZaposleni = listaZaposlenih[trenutniIndex];


				textBox3.Text = trenutniZaposleni.ime;
				textBox4.Text = trenutniZaposleni.prezime;
				textBox5.Text = trenutniZaposleni.OIB.ToString();
				textBox7.Text = trenutniZaposleni.servisira;
				
			}
		}
	}
}
