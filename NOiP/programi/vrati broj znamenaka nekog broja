using System;
using System.Collections.Specialized;

namespace MyApp
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int z=1235;
            Console.WriteLine(broj_znamenaka(z).ToString());
            



        }
        static int broj_znamenaka(int a)
        {
                    if (a == 0)
                    return 0;
                    int zbroj=a%10 +broj_znamenaka(a/10);
                   return zbroj;
        }

    }
}
