forma 1

using System;
using System.Collections.Generic;
using System.Windows.Forms;

namespace WinFormsApp1
{
	public partial class Form1 : Form
	{
		public List<string> listaPodataka = new List<string>();

		public Form1()
		{
			InitializeComponent();
		}

		private void button1_Click(object sender, EventArgs e)
		{
			unos unosForm = new unos(listaPodataka);
			if (unosForm.ShowDialog() == DialogResult.OK)
			{
				label2.Text = listaPodataka.Count.ToString();
			}
		}

		private void button2_Click(object sender, EventArgs e)
		{
			ispis ispisForm = new ispis(listaPodataka);
			ispisForm.ListaPromijenjena += () =>
			{
				label2.Text = listaPodataka.Count.ToString();
			};
			ispisForm.ShowDialog();
		}

		private void button3_Click(object sender, EventArgs e)
		{
			this.Close();
		}
	}
}



unos forma


using System;
using System.Collections;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Drawing;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Windows.Forms;

namespace WinFormsApp1
{
	public partial class unos : Form
	{
		private List<string> listaPodataka;
		public unos(List<string> listaPodataka)
		{
			InitializeComponent();
			this.listaPodataka = listaPodataka;
		}

		public string GetPodaci()
		{
			string ime = textBox1.Text;
			string prezime = textBox2.Text;
			return ime + " " + prezime;
		}

		private void button1_Click(object sender, EventArgs e)
		{
			listaPodataka.Add(textBox1.Text); 
			this.DialogResult = DialogResult.OK;
			this.Close();
		}

		private void button2_Click(object sender, EventArgs e)
		{
			this.DialogResult = DialogResult.Cancel;
		}
	}
}


ispis forma

using System;
using System.Collections.Generic;
using System.Windows.Forms;

namespace WinFormsApp1
{
	public partial class ispis : Form
	{
		private List<string> listaPodataka;

		public event Action ListaPromijenjena;

		public ispis(List<string> listaPodataka)
		{
			InitializeComponent();
			this.listaPodataka = listaPodataka;
			this.Load += new EventHandler(ispis_Load);
		}

		private void ispis_Load(object sender, EventArgs e)
		{
			RefreshListBox();
		}

		private void RefreshListBox()
		{
			listBox1.Items.Clear();
			foreach (var item in listaPodataka)
			{
				listBox1.Items.Add(item);
			}
		}

		private void button1_Click(object sender, EventArgs e)
		{
			if (listBox1.SelectedIndex != -1)
			{
				listaPodataka.RemoveAt(listBox1.SelectedIndex);
				RefreshListBox();
				ListaPromijenjena?.Invoke();
			}
			else
			{
				MessageBox.Show("Odaberite unos koji Å¾elite izbrisati.");
			}
		}

		private void button2_Click(object sender, EventArgs e)
		{
			this.Close();
		}
	}
}
