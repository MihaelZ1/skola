{
	cmd.Parameters.AddWithValue("@ime", tb_ime.Text);
	cmd.Parameters.AddWithValue("@prezime", tb_prezime.Text);
	cmd.Parameters.AddWithValue("@spol", tb_spol.Text);
	cmd.Parameters.AddWithValue("@godina", tb_godina.Text);
	cmd.Parameters.AddWithValue("@adresa", tb_adresa.Text);
	cmd.Parameters.AddWithValue("@id", id);
	try
	{
		cmd.ExecuteNonQuery();
	}
	catch (Exception ex)
