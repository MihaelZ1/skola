		return;
	}
}


int broj = Int32.Parse(tb_broj.Text);
string sql = "SELECT TOP (@broj) * FROM ucenici";
using (SqlCommand cmd = new SqlCommand(sql, cn))
{
	cmd.Parameters.AddWithValue("@broj", broj);
	SqlDataReader data_reader;
	try
	{
		data_reader = cmd.ExecuteReader();
	}
	catch (Exception ex)
	{
		MessageBox.Show(ex.Message);
		return;
	}
	lb_result.Items.Clear();
	string red;
    while (data_reader.Read())
	{
		red = "";
		for (int i = 0; i < data_reader.FieldCount; i++)
		{
			red += data_reader.GetValue(i).ToString().Trim() + "\t";
        }
		lb_result.Items.Add(red);
    }
	data_reader.Close();
} 
