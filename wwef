CREATE TABLE adrese (
	id INT PRIMARY KEY,
	postanski_broj INT,
	ime_naselja_postanski nchar(25),
	ime_naselja nchar(25),
	ulica nchar(25),
	broj int,
)

CREATE TABLE ucenici (
	id INT IDENTITY(1,1) PRIMARY KEY,
	ime nchar(25),
	prezime nchar(25),
	godina_rodenja INT,
	spol nchar(1),
	adresa INT,
	FOREIGN KEY (adresa) REFERENCES adrese(id)

)

CREATE TABLE ucenici (
	id INT IDENTITY(1,1) PRIMARY KEY,
	ime nchar(25),
	prezime nchar(25),
	godina_rodenja INT,
	spol nchar(1),
	adresa nchar(50),
)

