  <script>
function promjena(id){
    for(let i = 1; i<=10;i++){
        if(i<=id){
            document.getElementById(i).style.opacity="1";
        }
        else{
            document.getElementById(i).style.opacity="0.4";
        }
    }
    document.getElementById("broj").innerHTML=id;
}

</script>

<div>
